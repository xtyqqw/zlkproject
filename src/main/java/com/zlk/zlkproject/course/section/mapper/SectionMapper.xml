<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zlk.zlkproject.course.section.mapper.SectionMapper">
    <resultMap id="sectionEntityMap" type="com.zlk.zlkproject.entity.Section">
        <id property="sectionId" column="section_id" javaType="java.lang.Integer"></id>
        <result property="chapterId" column="chapter_id" javaType="java.lang.Integer"></result>
        <result property="sectionName" column="section_name" javaType="java.lang.String"></result>
        <result property="videoAddr" column="video_addr" javaType="java.lang.String"></result>
        <result property="sectionTime" column="section_time" javaType="java.lang.Integer"></result>
        <result property="sectionNum" column="section_num" javaType="java.lang.Integer"></result>
        <collection property="userSectionList" ofType="com.zlk.zlkproject.entity.UserSection">
            <id property="userId" column="user_id" javaType="java.lang.Integer"></id>
            <id property="sectionId" column="section_id" javaType="java.lang.Integer"></id>
            <result property="state" column="state" javaType="java.lang.String"></result>
            <result property="time" column="time" javaType="java.lang.Integer"></result>
        </collection>
    </resultMap>
    <select id="findSectionByChapterId" parameterType="java.lang.Integer" resultMap="sectionEntityMap">
        select section_id,chapter_id,section_name,video_addr,section_time,section_num from section where chapter_id = #{chapterId};
    </select>
    <select id="findStateById" parameterType="java.lang.Integer" resultType="java.lang.String">
        select state from user_section where section_id = #{sectionId} and user_id = #{userId}
    </select>
    <select id="findVideoAddrById" parameterType="java.lang.Integer" resultType="java.lang.String">
        select video_addr from section where section_id = #{sectionId}
    </select>
    <select id="findSectionBySectionIdAndUserId" parameterType="java.lang.Integer" resultMap="sectionEntityMap">
        select s.section_id,s.chapter_id,s.section_name,s.video_addr,s.section_time,s.section_num,
                us.user_id,us.section_id,us.state,us.time
         from section s left join user_section us on us.section_id=s.section_id
         where us.user_id = #{userId} and s.section_id = #{sectionId}
    </select>
</mapper>
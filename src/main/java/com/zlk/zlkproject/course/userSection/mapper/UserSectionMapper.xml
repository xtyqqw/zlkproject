<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zlk.zlkproject.course.userSection.mapper.UserSectionMapper">

    <resultMap type="com.zlk.zlkproject.entity.UserSection" id="UserSectionMap">
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="sectionId" column="section_id" jdbcType="INTEGER"/>
        <result property="state" column="state" jdbcType="VARCHAR"/>
        <result property="time" column="time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="UserSectionMap">
        select
          user_id, section_id, state, time
        from kaohe.user_section
        where user_id = #{userId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="UserSectionMap">
        select
          user_id, section_id, state, time
        from kaohe.user_section
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="UserSectionMap">
        select
        user_id, section_id, state, time
        from kaohe.user_section
        <where>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="sectionId != null">
                and section_id = #{sectionId}
            </if>
            <if test="state != null and state != ''">
                and state = #{state}
            </if>
            <if test="time != null">
                and time = #{time}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="userId" useGeneratedKeys="true">
        insert into kaohe.user_section(user_id,section_id,state, time)
        values (#{userId},#{sectionId},#{state}, #{time})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update kaohe.user_section
        <set>
            <if test="state != null and state != ''">
                state = #{state},
            </if>
            <if test="time != null">
                time = #{time},
            </if>
        </set>
        where user_id = #{userId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from kaohe.user_section where user_id = #{userId}
    </delete>

</mapper>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zlk.zlkproject.community.comment.mapper.ArticleCommentMapper">
    <resultMap id="articleCommentsWithUser" type="com.zlk.zlkproject.community.comment.entity.ArticleComment">
        <id column="id" property="id"/>
        <result column="comment_user_id" property="commentUserId"/>
        <result column="article_id" property="articleId"/>
        <result column="content" property="content"/>
        <result column="create_time" property="createTime"/>
        <association property="user" javaType="com.zlk.zlkproject.entity.User">
            <id column="user_id" property="userId"/>
            <result column="user_realname" property="userRealname"/>
            <result column="user_img" property="userImg"/>
        </association>
        <collection property="replyCommentList" column="id" select="com.zlk.zlkproject.community.comment.mapper.ReplyCommentMapper.getReplyCommentsByCommentId"/>
    </resultMap>

    <select id="getArticleCommentsByArticleId" parameterType="java.lang.Integer" resultMap="articleCommentsWithUser">
        select A.id,A.comment_user_id,A.article_id,A.content,DATE_FORMAT(A.create_time,'%Y-%m-%d %H:%i:%s') as create_time,
        U.id as user_id,U.user_realname,U.user_img
        from article_comments A
        left join users U on A.comment_user_id=U.id
        where A.article_id=#{id}
    </select>

    <insert id="addArticleComment" parameterType="com.zlk.zlkproject.community.comment.entity.ArticleComment" useGeneratedKeys="true" keyProperty="id">
        insert into article_comments (comment_user_id,article_id,content)
        values (#{commentUserId},#{articleId},#{content})
    </insert>
</mapper>
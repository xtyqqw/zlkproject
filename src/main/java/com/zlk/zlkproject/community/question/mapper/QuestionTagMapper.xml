<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zlk.zlkproject.community.question.mapper.QuestionTagMapper">
    <resultMap id="tagEntityMap" type="com.zlk.zlkproject.entity.Tag">
        <id column="tag_id" property="tagId" javaType="java.lang.Integer"/>
        <result column="tag_name" property="tagName" javaType="java.lang.String"/>
        <result column="tag_type_id" property="tagTypeId" javaType="java.lang.Integer"/>
        <result column="tag_type_name" property="tagTypeName" javaType="java.lang.String"/>
    </resultMap>
    <resultMap id="typeEntityMap" type="com.zlk.zlkproject.entity.Type">
        <id column="type_id" property="typeId" javaType="java.lang.Integer"/>
        <result column="type_name" property="typeName" javaType="java.lang.String"/>
    </resultMap>

    <select id="selectTagByTypeId" resultMap="tagEntityMap" parameterType="java.lang.Integer">
        SELECT tag_name=#{tagName} from tag where (tag_type_id=#{tagTypeId})=(SELECT type_id=#{typeId} FROM type where type_name=typeName)
    </select>
</mapper>
